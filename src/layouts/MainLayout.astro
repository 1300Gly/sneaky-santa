---
import '../styles/global.css';
import Header from '../components/Header.svelte';
import Footer from '../components/Footer.svelte';

const SITE_URL = 'https://sneaky-santa.app';

const {
  title = 'Sneaky Santa – Kerst Dobbelspel & Cadeau-Uitwisselingsspel',
  description = 'Sneaky Santa is een feestelijk kerstdobbelspel met dobbelstenen en kaarten voor snelle, vrolijke cadeau-uitwisselingen met familie, vrienden en collega’s.',
  canonicalPath = '/',
} = Astro.props;
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description}
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index,follow" />
    <link rel="icon" type="image/svg+xml" href="/icons/sneaky-santa.svg" />
    <link rel="canonical" href={`${SITE_URL}${canonicalPath}`} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description}
    />
    <meta property="og:image" content="/images/5de2a58e-7ab1-407f-ab34-3acd6336ecad.webp" />
    <meta property="og:url" content={`${SITE_URL}${canonicalPath}`} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description}
    />
    <meta name="twitter:image" content="/images/5de2a58e-7ab1-407f-ab34-3acd6336ecad.webp" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Sneaky Santa",
        "url": "https://sneaky-santa.app/",
        "description": {JSON.stringify(description)},
        "inLanguage": "nl",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://sneaky-santa.app/?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <link
      rel="preload"
      href="/fonts/poppins-v24-latin/poppins-v24-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/open-sans-v44-latin/open-sans-v44-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header client:load />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer client:load />
  </body>
</html>

