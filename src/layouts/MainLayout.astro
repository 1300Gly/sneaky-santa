---
import '../styles/global.css';
import Header from '../components/Header.svelte';
import Footer from '../components/Footer.svelte';
import Analytics from '@vercel/analytics/astro';

const SITE_URL = 'https://sneaky-santa.app';
const SITE_NAME = 'Sneaky Santa';

const {
  title = 'Sneaky Santa â€“ Online Kerst Dobbelspel Zonder Printen',
  description = 'Sneaky Santa is een volledig online kerstdobbelspel - geen printer, dobbelstenen of voorbereiding nodig! Speel direct in je browser met digitale dobbelstenen en kaarten voor snelle, vrolijke cadeau-uitwisselingen.',
  canonicalPath = '/',
  keywords = 'online kerst dobbelspel, kerstspel zonder printen, digitale cadeau uitwisseling, online kerstspel, geen printer nodig, kerst dobbelspel online, digitale dobbelstenen, geen voorbereiding, instant kerstspel, sneaky santa',
  image = `${SITE_URL}/images/5de2a58e-7ab1-407f-ab34-3acd6336ecad.webp`,
  lang = 'nl',
} = Astro.props;

const canonicalUrl = `${SITE_URL}${canonicalPath}`;
const ogImage = image.startsWith('http') ? image : `${SITE_URL}${image}`;
---

<!doctype html>
<html lang={lang}>
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content={description}
    />
    <meta name="keywords" content={keywords} />
    <meta name="author" content={SITE_NAME} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index,follow" />
    <meta name="theme-color" content="#dc2626" />
    <link rel="icon" type="image/svg+xml" href="/icons/sneaky-santa.svg" />
    <link rel="canonical" href={canonicalUrl} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    
    <!-- Language alternates -->
    <link rel="alternate" hreflang="nl" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href={canonicalUrl} />
    <link rel="alternate" hreflang="x-default" href={canonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:site_name" content={SITE_NAME} />
    <meta property="og:title" content={title} />
    <meta
      property="og:description"
      content={description}
    />
    <meta property="og:image" content={ogImage} />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:locale" content={lang === 'nl' ? 'nl_NL' : 'en_US'} />
    <meta property="og:locale:alternate" content={lang === 'nl' ? 'en_US' : 'nl_NL'} />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta
      name="twitter:description"
      content={description}
    />
    <meta name="twitter:image" content={ogImage} />
    <meta name="twitter:image:alt" content={title} />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "WebSite",
      "name": SITE_NAME,
      "url": SITE_URL,
      "description": description,
      "inLanguage": lang,
      "image": ogImage,
      "potentialAction": {
        "@type": "SearchAction",
        "target": `${SITE_URL}/?q={search_term_string}`,
        "query-input": "required name=search_term_string"
      }
    })} />
    
    <script type="application/ld+json" set:html={JSON.stringify({
      "@context": "https://schema.org",
      "@type": "Game",
      "name": SITE_NAME,
      "description": description,
      "url": canonicalUrl,
      "image": ogImage,
      "inLanguage": lang,
      "gameLocation": {
        "@type": "VirtualLocation",
        "url": canonicalUrl,
        "name": "Online Browser Game"
      },
      "numberOfPlayers": {
        "@type": "QuantitativeValue",
        "minValue": 4,
        "maxValue": 20
      },
      "gameItem": {
        "@type": "Thing",
        "name": "Digital Dice and Cards"
      },
      "applicationCategory": "Game",
      "operatingSystem": "Web Browser",
      "offers": {
        "@type": "Offer",
        "price": "0",
        "priceCurrency": "EUR",
        "availability": "https://schema.org/InStock"
      },
      "featureList": [
        "No printing required",
        "No physical dice needed",
        "No preparation needed",
        "Play instantly in browser",
        "Digital dice and cards",
        "Online multiplayer support"
      ]
    })} />

    <link
      rel="preload"
      href="/fonts/poppins-v24-latin/poppins-v24-latin-700.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <link
      rel="preload"
      href="/fonts/open-sans-v44-latin/open-sans-v44-latin-regular.woff2"
      as="font"
      type="font/woff2"
      crossorigin
    />
    <Analytics />
  </head>
  <body class="min-h-screen flex flex-col">
    <Header client:load />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer client:load />
  </body>
</html>

