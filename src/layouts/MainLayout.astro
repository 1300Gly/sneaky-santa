---
import '../styles/global.css';
import Header from '../components/Header.svelte';
import Footer from '../components/Footer.svelte';
---

<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Sneaky Santa is een feestelijk kerstdobbelspel met dobbelstenen en kaarten voor snelle, vrolijke cadeau-uitwisselingen met familie, vrienden en collega’s."
    />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="robots" content="index,follow" />
    <link rel="icon" type="image/svg+xml" href="/icons/sneaky-santa.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Sneaky Santa – Kerst Dobbelspel & Cadeau-Uitwisselingsspel</title>

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="Sneaky Santa – Kerst Dobbelspel & Cadeau-Uitwisselingsspel" />
    <meta
      property="og:description"
      content="Speel Sneaky Santa, het ultieme kerst cadeauspel met dobbelstenen, kaarten en drie spannende rondes vol feestelijke chaos."
    />
    <meta property="og:image" content="/images/5de2a58e-7ab1-407f-ab34-3acd6336ecad.webp" />
    <meta property="og:url" content="https://sneaky-santa.app/" />

    <!-- Twitter Card -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="Sneaky Santa – Kerst Dobbelspel & Cadeau-Uitwisselingsspel" />
    <meta
      name="twitter:description"
      content="Breng lachen en spanning naar je kerstfeest met Sneaky Santa, een digitaal kerstdobbelspel met speelkaarten."
    />
    <meta name="twitter:image" content="/images/5de2a58e-7ab1-407f-ab34-3acd6336ecad.webp" />

    <!-- Structured Data (JSON-LD) -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "WebSite",
        "name": "Sneaky Santa",
        "url": "https://sneaky-santa.app/",
        "description": "Sneaky Santa is een feestelijk kerstdobbelspel met dobbelstenen en kaarten voor snelle, vrolijke cadeau-uitwisselingen met familie, vrienden en collega’s.",
        "inLanguage": "nl",
        "potentialAction": {
          "@type": "SearchAction",
          "target": "https://sneaky-santa.app/?q={search_term_string}",
          "query-input": "required name=search_term_string"
        }
      }
    </script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&family=Open+Sans:wght@400;500;600&display=swap" rel="stylesheet">
  </head>
  <body class="min-h-screen flex flex-col">
    <Header client:load />
    
    <main class="flex-1">
      <slot />
    </main>
    
    <Footer client:load />
  </body>
</html>

